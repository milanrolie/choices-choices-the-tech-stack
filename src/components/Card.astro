---
export interface Props {
  title: string;
  body: string;
  href: string;
  url: string;
  beschrijving: string;
}

const { href, title, body, url, beschrijving } = Astro.props;
---
<div class="card">
    <a href={`/stekjes/${href}`}>
      <img src={url} alt={title} />
      <div class="overlay"></div>
      <h2>
        {title}
      </h2>
      <!-- <p>
        {beschrijving}
      </p> -->
    </a>
</div>
<style>

.card {
    position: relative;
    display: flex;
    height: 50vh;
    width: 24.2%;
    overflow: hidden;
    border-radius: 1em;
  }

  .overlay {
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    background-color: black;
    opacity: .2;
  }

  h2 {
    position: absolute;
    bottom: 1em;
    left: 1em;
    color: var(--main-offwhite);
    transition: .2s;
  }
  
  .card:hover h2 {
    color: #b7ddb0;
  }

  .card:hover img {
    transform: scale(1.05);
  }

  a {
    text-decoration: none;
    color: currentColor;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: .3s;
  }

</style>
